@model DotnetApp.Models.Customer

@if (ViewBag.Errors != null)
{
    <div class="text-danger">
        <ul>
            @foreach (var error in ViewBag.Errors)
            {
                <li>@error</li>
            }
        </ul>
    </div>
}

<div class="container">

    <form method="post" asp-action="Add">
        <h3 class="modal-title">Create New Customer : </h3>
        <br />

        <div class="mb-3">
            <label asp-for="Name" class="control-label"> Name :</label>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="MembershiptypeId" class="control-label">Membership Name</label>
            <select asp-for="MembershiptypeId" class="form-control" asp-items="@(new SelectList(ViewBag.member, "Value", "Text"))"></select>
            <span asp-validation-for="MembershiptypeId" class="text-red"></span>
        </div>

        <br />
    
        <button type="submit" value="Add" class="btn btn-primary">Create Customer</button>
    </form>

    <br />
    <div>
        <a asp-area=""
        asp-controller="Customer"
        asp-action="Index">Back to List</a>
    </div>


</div>