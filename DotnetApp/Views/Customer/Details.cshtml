@model DotnetApp.Models.Customer

@{
    ViewData["Title"] = "Details";

    var defaultMembershipType = new Membershiptype();
}

<h3>Customer's Details</h3>

<br />

<div>
    <h4>Customer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Membershiptype)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => (model.Membershiptype ?? defaultMembershipType).Name)
        </dd>
    </dl>
</div>
<br />
<div>
    <form asp-action="Edit" asp-route-id="@Model?.Id" method="get" style="display:inline;">
        <button type="submit" class="btn btn-outline-secondary">Edit</button>
    </form>

    <form asp-action="Index"  method="get" style="display:inline;">
        <button type="submit" class="btn btn-outline-secondary">Back to List</button>
    </form>
 

  
</div>
