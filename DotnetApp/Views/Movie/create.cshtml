@model DotnetApp.Models.Movie

@{
    ViewData["Title"] = "Create";
}

<h3>Create New Movie : </h3>


<br />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="CreateMovie" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Name :</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Released" class="control-label">Released At :</label>
                <input type="date" asp-for="Released" class="form-control" />
                <span asp-validation-for="Released" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Added" class="control-label">Added At :</label>
                <input type ="date" asp-for="Added" class="form-control" />
                <span asp-validation-for="Added" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageFile" class="control-label">Poster :</label>
                <input asp-for="ImageFile" class="form-control" type="file" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GenreId" class="control-label">Movie Genre </label>
                <select asp-for="GenreId" class="form-control" asp-items="@(new SelectList(ViewBag.member, "Value", "Text"))"></select>
                <span asp-validation-for="GenreId" class="text-red"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create Movie" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<br />

<div>
    <a asp-action="Index">Back to List</a>
</div>
